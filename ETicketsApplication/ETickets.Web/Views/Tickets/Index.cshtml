@model List<ETickets.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" >
   <div class="m-3">
       <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add new Ticket</a>
   </div> 
   @for(int i=0;i<Model.Count;i++)
    {
        var item = Model[i]; 
        if(i%3==0)
        {
            @:<div class="row">
        }
        <div class="col-md-3 m-4">
            <div class="card" style="width:18rem ; height:30rem;">
            <img class="card-img-top" src="@item.ConcertImage" height="50%" alt="Image for product">
            <div class="card-body">
                <h5 class="card-title">@item.TicketName</h5>
                <p class="card-text text-secondary">@item.Genre</p>
                <p class="card-text">@item.Description</p>
                <h6>Price @item.TicketPrice den.</h6>
            </div>
                <div class="card-footer">
                    <a asp-controller="Tickets" asp-action="AddTicketToCart"  asp-route-id="@item.Id" class="btn btn-info">Add To Card</a>
                    <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>

                </div>
            </div>
        </div>
        if(i%3==2)
        {
            @:</div>
        }
    }
</div>